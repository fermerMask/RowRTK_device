ScreenManager:
    SplashScreen:
    MainScreen:
        name: 'main'
    RTKActivationScreen:
        name: 'rtkactivation'
    RTKSetupScreen:
        name: 'setting'
    StandaloneScreen:
        name: 'standalone'

<SplashScreen>:
    name: 'splash'    
    MDFloatLayout:
        md_bg_color: 188/255, 227/255, 217/255, 1
        Image:
            source: "images/rowing1.png"
            size_hint: .50, .50
            pos_hint: {"center_x": .54, "center_y": .6}
            canvas.before:
                Color:
                    rgb: 1, .85, .825, 1
        
        MDIconButton:
            icon: "chevron-right"
            user_font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .12}      
            on_press: app.root.current = 'main'   
                    

        MDLabel:
            text: "Welcom to RowRTK"   
            pos_hint: {"center_x": .5, "center_y": .28}       
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0, 0, 0
            font_size:"35sp"

        MDLabel:
            text: "Getting Start RowRTK"   
            pos_hint: {"center_x": .5, "center_y": .21}       
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0, 0, 0 
            font_size:"13sp"

<MainScreen>:
    name: 'main'
    MDBoxLayout:
        md_bg_color: 188/255, 227/255, 217/255, 1
        orientation:'vertical'

        MDGridLayout:
            size_hint_y:.75
            cols:3
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            
            ElementCard:
                image:"images/setting.png"
                text:"Setting"
                on_release: app.root.current = 'setting'
            ElementCard:
                image:"images/rowing-boat.png"
                text:"Training Start"
                subtext: 'only GPS'
                on_release: app.root.current = 'standalone'
            ElementCard:
                image:"images/gps.png"
                text:"RTK Training Start"
                subtext: 'Use RTK Positioning System'
                on_release: app.root.current = 'rtkactivation'

<ElementCard@MDCard>:
    md_bg_color: 120/255, 173/255, 173/255, 1
    padding:dp(10)
    spacing:dp(10)
    radius:dp(25)
    ripple_behavior: True
    image:''
    text:""
    items_count:""
    subtext:''

    orientation: 'vertical'
    Image:
        source: root.image
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            halign: "center"
            text: root.text
            theme_text_color: "Custom"
            text_color: 255,255,255
            font_size: "20sp"
            bold:True
        
        MDLabel:
            halign: "center"
            font_style: "Caption"
            text: root.subtext
        
        MDLabel:
            halign: "center"
            text: root.items_count

<StandaloneScreen>
    name: 'standalone'
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "GPS Stand Alone"
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'main')]]
            md_bg_color: 188/255, 227/255, 217/255, 1
            elevation: 10

        MDBoxLayout:
            orientation: 'vertical'
            padding: 5
            spacing: 5
            md_bg_color: 0.9,0.9,0.9,1

            # Speed Data Display
            MDBoxLayout:
                size_hint_y: 0.5
                padding: [10, 20]
                height: dp(230)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

                MDLabel:
                    id: velocity_label
                    text: "Speed: 0.00"
                    halign: "center"
                    theme_text_color: "Primary"
                    font_style: "H4"
            
            MDGridLayout:
                cols:2
                size_hint_y: None
                height: dp(130)
                padding: [10, 10]
                spacing: 10

                MDLabel:
                    text: "Time"
                    halign: "center"

                MDLabel:
                    id: time
                    text: "0:00:0"
                    font_style: "H6"
                    halign: "center"

                MDLabel:
                    text: "velocity(m/s)"
                    halign: "center"

                MDLabel:
                    id: velocity
                    text: "0.00"
                    font_style: "H6"
                    halign: "center"
                
                MDLabel:
                    text: "Distance(km)"
                    halign: "center"

                MDLabel:
                    id: distance
                    text: "0.00"
                    font_style: "H6"
                    halign: "center"
            
            # Start and Stop Buttons

            MDFillRoundFlatIconButton:
                
                id: start_stop_button
                icon: "play"
                text: "Start"
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.start_stop_toggle()

<RTKActivationScreen>
    name: 'rtkactivation'
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Using RTK Positioning System"
            left_action_items: [["arrow-left",lambda x: setattr(root.manager,'current','main')]]
            elevation: 10
            md_bg_color: 188/255, 227/255, 217/255, 1

        MDBoxLayout:
            orientation: 'vertical'
            padding: 10  # 全体にパディングを追加
            spacing: 10  # セクション間のスペースを設定

            # 上部の画面 (時計)
            MDBoxLayout:
                size_hint_y: 0.5
                padding: [10, 20]  # 上下にパディングを追加

                canvas.before:
                    Color:
                        rgba: 0.9, 0.9, 0.9, 1  # 背景色を指定
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]  # 角を丸くする

                MDLabel:
                    id: time_label
                    text: "00:00:00"
                    halign: "center"
                    theme_text_color: "Primary"
                    font_style: "H2"


            # 下部の画面 (2分割)
            MDBoxLayout:
                size_hint_y: 0.5
                spacing: 10  # 左右のセクション間のスペースを設定

                # 左側の画面 (日付)
                BoxLayout:
                    padding: [10, 20]  # 上下にパディングを追加

                    canvas.before:
                        Color:
                            rgba: 0.9, 0.9, 0.9, 1  # 背景色を指定
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20]  # 角を丸くする

                    MDLabel:
                        id: date_label
                        text: "YYYY-MM-DD"
                        halign: "center"
                        theme_text_color: "Primary"
                        font_style: "H4"

                # 右側の画面 (適当なデータ)
                MDBoxLayout:
                    padding: [10, 20]  # 上下にパディングを追加

                    canvas.before:
                        Color:
                            rgba: 0.9, 0.9, 0.9, 1  # 背景色を指定
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [20]  # 角を丸くする

                    MDLabel:
                        text: "Sample Data"
                        halign: "center"
                        theme_text_color: "Primary"
                        font_style: "H4"

<RTKSetupScreen>:
    name: 'setting'
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Setting"
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'main')]]
            elevation: 10
            md_bg_color: 188/255, 227/255, 217/255, 1

        MDBoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10

            # Base Station Selection
            MDTextField:
                id: base_station
                hint_text: "Enter Base Station URL"
                on_text_validate: root.on_base_station_changed()

            # Log File Location
            MDTextField:
                id: log_file
                hint_text: "Enter Log File Location"
                readonly: True

            # Button to Open File Manager
            MDRectangleFlatIconButton:
                icon: "folder"
                text: "Select Log File Location"
                on_press: root.open_file_manager()
                pos_hint: {"center_x": 0.5}

            # Button to Save Configurations
            MDRectangleFlatIconButton:
                icon: "content-save"
                text: "Save Configuration"
                on_press: root.save_config()
                pos_hint: {"center_x": 0.5}
